@model JobPortal.Models.Job

<h2>Applications for @Model.Title</h2>
<table class="table">
    <thead>
        <tr>
            <th>Applicant</th>
            <th>Applied Date</th>
            <th>Status</th>
            <th>CV</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var application in Model.Applications)
        {
            <tr>
                <td>@application.User.Username</td>
                <td>@application.AppliedDate.ToString("dd MMM yyyy")</td>
                <td>@application.Status</td>
                <td>
                    @if (!string.IsNullOrEmpty(application.CVFileName))
                    {
                        <a asp-action="DownloadCV" asp-route-applicationId="@application.Id">Download CV</a>
                    }
                    else
                    {
                        <span>No CV</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="ManageJobs" class="btn btn-secondary">Back to Manage Jobs</a>
