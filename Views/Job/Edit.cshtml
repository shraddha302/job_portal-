@model JobPortal.Models.Job

@{
    ViewData["Title"] = "Edit Job";
}

<div class="container mt-4">
    <h2>Edit Job</h2>
    @Html.ValidationSummary(false, "", new { @class = "alert alert-danger" })

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <!-- Job Title -->
        <div class="form-group mb-3">
            <label asp-for="Title" class="form-label">Job Title</label>
            <input asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <!-- Job Description -->
        <div class="form-group mb-3">
            <label asp-for="Description" class="form-label">Job Description</label>
            <textarea asp-for="Description" class="form-control" rows="5" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Company Name -->
        <div class="form-group mb-3">
            <label asp-for="Company" class="form-label">Company Name</label>
            <input asp-for="Company" class="form-control" required />
            <span asp-validation-for="Company" class="text-danger"></span>
        </div>

        <!-- Current Company Logo -->
        <div class="form-group mb-3">
            <label>Current Company Logo</label><br />
            <img src="@Model.CompanyLogoUrl" alt="Company Logo" style="max-width:200px;" class="mb-2" />
        </div>

        <!-- Update Company Logo -->
        <div class="form-group mb-3">
            <label asp-for="CompanyLogoUrl" class="form-label">Update Company Logo (optional)</label>
            <input asp-for="CompanyLogoUrl" type="file" class="form-control" />
            <span asp-validation-for="CompanyLogoUrl" class="text-danger"></span>
        </div>

        <!-- Job Location -->
        <div class="form-group mb-3">
            <label asp-for="Location" class="form-label">Job Location</label>
            <input asp-for="Location" class="form-control" required />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>

        <!-- Job Type -->
        <div class="form-group mb-3">
            <label asp-for="Type" class="form-label">Job Type</label>
            <select asp-for="Type" class="form-control" required>
                <option value="Full-Time">Full-Time</option>
                <option value="Part-Time">Part-Time</option>
                <option value="Contract">Contract</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>

        <!-- Salary -->
        <div class="form-group mb-3">
            <label asp-for="Salary" class="form-label">Salary</label>
            <input asp-for="Salary" class="form-control" type="number" required />
            <span asp-validation-for="Salary" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
